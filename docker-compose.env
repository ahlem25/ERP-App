# Variables d'environnement pour l'application ERP
# Ce fichier peut être utilisé avec docker-compose --env-file docker-compose.env

# Version de l'application (sera remplacée automatiquement par le script build-and-deploy.sh)
VERSION=1.0.0-SNAPSHOT

# Configuration de la base de données
DB_URL=jdbc:mysql://mysql:3306/billing_db?useSSL=false&serverTimezone=UTC
DB_USERNAME=billing_prd
DB_PASSWORD=billing_password

# Configuration Eureka
EUREKA_CLIENT_SERVICE_URL=http://erp-service-discovery:8013/eureka/

# Configuration Spring Cloud Config
SPRING_CLOUD_CONFIG_URI=http://erp-config:8012

# Profil Spring
SPRING_PROFILES_ACTIVE=prd

# Politique de redémarrage des conteneurs
RESTART_POLICY=unless-stopped

# Configuration Keycloak pour le service user
KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_REALM=erp-realm
KEYCLOAK_CLIENT_ID=erp-client
KEYCLOAK_CLIENT_SECRET=your-client-secret
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=passw0rd
